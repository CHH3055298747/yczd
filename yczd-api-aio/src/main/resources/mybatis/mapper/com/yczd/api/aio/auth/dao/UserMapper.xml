<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yczd.api.aio.auth.dao.UserMapper">
    <select id="findAll"
			resultType="com.yczd.api.aio.auth.domain.User">
        select
        	id
           ,username
           ,password
        from
        	user
    </select>
    <select id="findById" parameterType="java.lang.String"
    		resultType="com.yczd.api.aio.auth.domain.User">
        select
        	id
           ,username
           ,password
        from
        	user u
        where
        	u.id = #{id}
    </select>
    <select id="findByName" parameterType="java.lang.String"
			resultType="com.yczd.api.aio.auth.domain.User">
        select
        	id
           ,username
           ,password
        from
        	user u
        where
        	u.username = #{userName}
    </select>
</mapper>
